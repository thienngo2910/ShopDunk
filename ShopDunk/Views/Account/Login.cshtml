@model ShopDunk.Models.User
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml"; // <-- DÒNG NÀY RẤT QUAN TRỌNG
}

<h2>Đăng nhập</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="mb-3">
        @Html.Label("username", "Tên đăng nhập", new { @class = "form-label" })
        @Html.TextBox("username", null, new { @class = "form-control", required = "required" })
    </div>

    <div class="mb-3">
        @Html.Label("password", "Mật khẩu", new { @class = "form-label" })
        @Html.Password("password", null, new { @class = "form-control", required = "required" })
    </div>

    <button type="submit" class="btn btn-primary">Đăng nhập</button>

    <div class="text-danger mt-2">@ViewBag.Error</div>
}

<p class="mt-3">
    Chưa có tài khoản? <a href="@Url.Action("Register", "Account")">Đăng ký ngay</a>
</p>