@model ShopDunk.Models.ChangePasswordViewModel
@{\n ViewBag.Title = \"Đổi mật khẩu\";\n}

    <h2>Đổi mật khẩu</h2>

    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.UserID)

        <div class="mb-3">
            @Html.LabelFor(m => m.NewPassword, "Mật khẩu mới")
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.ConfirmPassword, "Xác nhận mật khẩu mới")
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "Home")">Hủy</a>
    }