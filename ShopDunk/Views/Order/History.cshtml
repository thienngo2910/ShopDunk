@model IEnumerable<ShopDunk.Models.Order>
@{
    ViewBag.Title = "Lịch sử mua hàng";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Dùng layout chính
}

<h2>Lịch sử mua hàng</h2>

@if (!Model.Any())
{
    <p class="text-muted">Bạn chưa có đơn hàng nào.</p>
}
else
{
    <div class="accordion" id="orderHistoryAccordion">
        @foreach (var order in Model)
        {
            <div class="card" style="background-color: var(--dark-card); border: 1px solid var(--border-color); margin-bottom: 1rem;">
                <div class="card-header" id="heading-@order.OrderID">
                    <h2 class="mb-0">
                        <button class="btn btn-link text-light text-decoration-none w-100 d-flex justify-content-between" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@order.OrderID" aria-expanded="true" aria-controls="collapse-@order.OrderID">
                            <span>
                                Đơn hàng #@order.OrderID - Ngày: @order.OrderDate.ToString("dd/MM/yyyy")
                            </span>
                            <span class="fw-bold" style="color: var(--accent-gold);">
                                @order.TotalAmount.ToString("N0") ₫
                            </span>
                        </button>
                    </h2>
                </div>

                <div id="collapse-@order.OrderID" class="collapse @(Model.First() == order ? "show" : "")" aria-labelledby="heading-@order.OrderID" data-bs-parent="#orderHistoryAccordion">
                    <div class="card-body">

                        <p>
                            <strong>Tình trạng:</strong>
                            <span class="badge
                                 @(order.Status == "Đã giao" ? "bg-success" :
                                   order.Status == "Đang giao" ? "bg-info" :
                                   order.Status == "Đã hủy" ? "bg-danger" : "bg-warning")">
                                @order.Status
                            </span>
                        </p>

                        <table class="table" style="color: var(--text-light);">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in order.OrderDetails)
                                {
                                    <tr>
                                        <td>@(detail.Product?.Name ?? "[Sản phẩm đã xóa]")</td>
                                        <td>@detail.Quantity</td>
                                        <td>@detail.UnitPrice.ToString("N0") ₫</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
}