@model ShopDunk.Models.SliderImage
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var existingKeys = (List<string>)ViewBag.ExistingKeys;
    // ViewBag.Title đã được set trong AdminController
}

@* <h2>Thêm Slider mới</h2> *@

@using (Html.BeginForm("CreateSlider", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="mb-3">
        @Html.LabelFor(m => m.CategoryKey)
        @Html.TextBoxFor(m => m.CategoryKey, new { @class = "form-control", list = "category-keys" })
        @Html.ValidationMessageFor(m => m.CategoryKey, "", new { @class = "text-danger" })
        <datalist id="category-keys">
            @foreach (var key in existingKeys)
            {
                <option value="@key"></option>
            }
        </datalist>
        <small class="form-text text-muted">Nhập 'Home' cho trang chủ, 'iPhone' cho trang iPhone, v.v.</small>
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.ImageFiles)
        @* --- SỬA LỖI: Đổi 'ImageFile' thành 'ImageFiles' và thêm 'multiple' --- *@
        @Html.TextBoxFor(m => m.ImageFiles, new { type = "file", @class = "form-control", multiple = "multiple" })
        @Html.ValidationMessageFor(m => m.ImageFiles, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Title)
        @Html.TextAreaFor(m => m.Title, new { @class = "form-control", rows = 3 })
        <small class="form-text text-muted">Tiêu đề này sẽ được áp dụng cho tất cả ảnh được tải lên.</small>
    </div>

    <div class="mb-3 form-check">
        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
        @Html.LabelFor(m => m.IsActive, new { @class = "form-check-label" })
    </div>

    <button type="submit" class="btn btn-primary">Tạo mới</button>
    <a href="@Url.Action("Sliders")" class="btn btn-secondary">Hủy</a>
}