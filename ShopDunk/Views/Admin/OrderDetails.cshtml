@model ShopDunk.Models.Order
@{
    ViewBag.Title = "Chi tiết Đơn hàng #" + Model.OrderID;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Chi tiết Đơn hàng #@Model.OrderID</h1>
    <a href="@Url.Action("Orders")" class="btn btn-sm btn-outline-secondary">Quay lại danh sách</a>
</div>

<div class="row g-4">
    <!-- Thông tin đơn hàng -->
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header">
                Chi tiết Sản phẩm
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderDetails)
                        {
                            <tr>
                                <td>@(item.Product?.Name ?? "[Sản phẩm đã xóa]")</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice.ToString("N0") ₫</td>
                                <td>@((item.Quantity * item.UnitPrice).ToString("N0")) ₫</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="fw-bold">
                            <td colspan="3" class="text-end">Tổng cộng:</td>
                            <td class="fs-5 text-danger">@Model.TotalAmount.ToString("N0") ₫</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <!-- Cập nhật trạng thái -->
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header">
                Thông tin Khách hàng & Trạng thái
            </div>
            <div class="card-body">
                <p><strong>Khách hàng:</strong> @(Model.User?.Username ?? "[Đã xóa]")</p>
                <p><strong>Email:</strong> @(Model.User?.Email ?? "N/A")</p>
                <p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>

                <hr />

                <h5>Cập nhật Trạng thái</h5>

                @using (Html.BeginForm("UpdateOrderStatus", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("orderID", Model.OrderID)

                    <div class="mb-3">
                        @Html.DropDownList("status", (SelectList)ViewBag.StatusList, new { @class = "form-select" })
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Cập nhật</button>
                }
            </div>
        </div>
    </div>
</div>