@model IEnumerable<ShopDunk.Models.SliderImage>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    // ViewBag.Title đã được set trong AdminController
}

@section PageHeaderButtons {
    <a href="@Url.Action("CreateSlider")" class="btn btn-sm btn-primary">
        <i class="fas fa-plus me-1"></i>
        Thêm Slider mới
    </a>
}

@* --- THÊM MỚI FORM BỘ LỌC --- *@
<form method="get" class="row g-3 mb-3">
    <div class="col-md-4">
        @Html.Label("filterKey", "Lọc theo trang:", new { @class = "form-label" })
        @Html.DropDownList("filterKey", (SelectList)ViewBag.CategoryKeys, "Tất cả các trang", new { @class = "form-select", onchange = "this.form.submit();" })
    </div>
</form>
@* --- KẾT THÚC THÊM MỚI --- *@


<table class="table table-striped table-hover mt-3">
    <thead>
        <tr>
            <th>Ảnh</th>
            <th>Key Danh mục</th>
            <th>Tiêu đề (Alt Text)</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @* --- SỬA LỖI: Đổi ImageUrl thành ImageBase64 --- *@
                    <img src="@item.ImageBase64" alt="@item.Title" style="width: 150px; height: 50px; object-fit: cover;" />
                </td>
                <td class="align-middle"><strong>@item.CategoryKey</strong></td>
                <td class="align-middle">@item.Title</td>
                <td class="align-middle">
                    @if (item.IsActive)
                    {<span class="badge bg-success">Đang hoạt động</span> }
                    else
                    { <span class="badge bg-secondary">Đã tắt</span>}
                </td>
                <td class="align-middle text-end">
                    <a href="@Url.Action("EditSlider", new { id = item.SliderImageID })" class="btn btn-sm btn-outline-primary">Sửa</a>
                    @using (Html.BeginForm("DeleteSlider", "Admin", new { id = item.SliderImageID }, FormMethod.Post, new { @class = "d-inline", onsubmit = "return confirm('Bạn có chắc muốn xóa slider này?');" }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger">Xóa</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>