@model List<ShopDunk.Models.Product>
@{
    ViewBag.Title = "Quản lý Sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Sử dụng layout Admin mới
}


<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Quản lý Sản phẩm</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("Create")" class="btn btn-sm btn-primary">
            <i class="fas fa-plus me-1"></i>
            Thêm sản phẩm
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Ảnh</th>
                <th>Tên</th>
                <th>Giá</th>
                <th>Tồn kho</th>
                <th>Danh mục</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://placehold.co/60x60/eee/ccc?text=N/A" : item.ImageUrl)"
                             width="60" height="60" style="object-fit: cover; border-radius: 4px;" />
                    </td>
                    <td class="align-middle">@item.Name</td>
                    <td class="align-middle">@item.Price.ToString("N0") ₫</td>
                    <td class="align-middle">@item.Stock</td>
                    <td class="align-middle">@item.Category</td>
                    <td class="align-middle">
                        <a href="@Url.Action("Edit", new { id = item.ProductID })" class="btn btn-outline-primary btn-sm">Sửa</a>
                        <a href="@Url.Action("Delete", new { id = item.ProductID })" class="btn btn-outline-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>