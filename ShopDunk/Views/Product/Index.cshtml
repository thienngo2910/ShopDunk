@model List<ShopDunk.Models.Product>
<h2>Quản lý sản phẩm</h2>
<p><a href="@Url.Action("Create")" class="btn btn-success">Thêm sản phẩm</a></p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Giá</th>
            <th>Tồn kho</th>
            <th>Danh mục</th>
            <th>Ảnh</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("N0") ₫</td>
                <td>@item.Stock</td>
                <td>@item.Category</td>
                <td><img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/Images/default.png" : item.ImageUrl)" width="80" /></td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.ProductID })" class="btn btn-warning btn-sm">Sửa</a>
                    <a href="@Url.Action("Delete", new { id = item.ProductID })" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>