@model List<ShopDunk.Models.Product>
@{
    ViewBag.Title = "Quản lý Sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string currentCategory = ViewBag.CurrentCategory;
    string sortBy = ViewBag.SortBy;
}
@* (Giữ nguyên phần PageHeaderButtons và Form lọc) *@
@section PageHeaderButtons {
    <a href="@Url.Action("Create")" class="btn btn-sm btn-primary"><i class="fas fa-plus me-1"></i> Thêm sản phẩm</a>
}
<form method="get" class="row g-3 mb-3">
</form>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Ảnh</th>
                <th>Tên</th>
                <th>Giá</th>
                <th>Tồn kho</th>
                <th>Danh mục</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @* --- SỬA LỖI: Đổi ImageUrl thành ImageBase64 --- *@
                        <img src="@item.ImageBase64"
                             width="60" height="60" style="object-fit: cover; border-radius: 4px;" />
                    </td>
                    <td class="align-middle">@item.Name</td>
                    <td class="align-middle">@item.Price.ToString("N0") ₫</td>
                    <td class="align-middle">@item.Stock</td>
                    <td class="align-middle">@item.Category</td>
                    <td class="align-middle">
                        <a href="@Url.Action("Edit", new { id = item.ProductID })" class="btn btn-outline-primary btn-sm">Sửa</a>
                        <a href="@Url.Action("Delete", new { id = item.ProductID })" class="btn btn-outline-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>