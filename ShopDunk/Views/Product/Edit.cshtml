@model ShopDunk.Models.Product
@{
    ViewBag.Title = "Sửa sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ProductID)
    @* SỬA LỖI: Đã xóa dòng HiddenFor ImageUrl *@

    @Html.ValidationSummary(true, "Vui lòng kiểm tra lại các lỗi sau:", new { @class = "text-danger" })

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Name, "Tên sản phẩm")
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Category, "Danh mục")
        @Html.DropDownListFor(m => m.Category,
            new SelectList(new[] { "iPhone", "iPad", "Mac", "Watch", "Âm thanh", "Phụ kiện" }, Model.Category),
            "Chọn danh mục",
            new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Description, "Mô tả")
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Price, "Giá")
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Stock, "Số lượng tồn kho")
        @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(m => m.Stock, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        <label>Ảnh hiện tại</label><br />
        @* SỬA LỖI: Dùng ImageBase64 *@
        @if (!string.IsNullOrEmpty(Model.ImageBase64))
        {
            <img src="@Model.ImageBase64" alt="@Model.Name" style="max-width: 200px; max-height: 200px;" class="mb-2" />
        }
        else
        {
            <p class="text-muted">Chưa có ảnh</p>
        }
    </div>
    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        
        <a href="@Url.Action("ManageVariants", "Product", new { id = Model.ProductID })" class="btn btn-warning text-dark">
            <i class="fas fa-layer-group"></i> Quản lý Màu/Dung lượng
        </a>
        <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Hủy</a>
    </div>


    <div class="form-group mb-3">
        @Html.LabelFor(m => m.ImageFile, "Thay đổi ảnh (không bắt buộc)")
        @Html.TextBoxFor(m => m.ImageFile, new { type = "file", @class = "form-control" })
        <small class="form-text text-muted">Để trống nếu không muốn thay đổi ảnh</small>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Hủy</a>
}