@model IEnumerable<ShopDunk.Models.Product>
@{
    ViewBag.Title = "Danh mục " + ViewBag.CategoryName;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var sliders = (List<ShopDunk.Models.SliderImage>)ViewBag.Sliders;
}

@* =============== 1. PHẦN SLIDER (BANNER) =============== *@
@if (sliders != null && sliders.Any())
{
    <div id="categoryCarousel" class="carousel slide mb-5 shadow-sm" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-indicators">
            @for (int i = 0; i < sliders.Count; i++)
            {
                <button type="button" data-bs-target="#categoryCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
            }
        </div>
        <div class="carousel-inner" style="border-radius: 15px; overflow: hidden;">
            @for (int i = 0; i < sliders.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@sliders[i].ImageBase64" class="d-block w-100" alt="@sliders[i].Title" style="height: 350px; object-fit: cover;">
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#categoryCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#categoryCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
}

@* =============== 2. TIÊU ĐỀ & BỘ LỌC =============== *@
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="category-title text-light">@ViewBag.Title</h2>

            <form method="get" class="d-flex align-items-center">
                @* Giữ nguyên tham số 'id' khi lọc *@
                @if (ViewBag.CategoryName != null)
                {
                    <input type="hidden" name="id" value="@ViewBag.CategoryName" />
                }

                <label for="sortBy" class="form-label me-2 mb-0 text-muted">Sắp xếp:</label>
                <select name="sortBy" id="sortBy" class="form-select form-select-sm bg-dark text-light border-secondary" onchange="this.form.submit()">
                    <option value="default" @(ViewBag.SortBy == "default" ? "selected" : "")>Mới nhất</option>
                    <option value="price_asc" @(ViewBag.SortBy == "price_asc" ? "selected" : "")>Giá: Thấp đến Cao</option>
                    <option value="price_desc" @(ViewBag.SortBy == "price_desc" ? "selected" : "")>Giá: Cao đến Thấp</option>
                </select>
            </form>
        </div>
    </div>
</div>

@* =============== 3. DANH SÁCH SẢN PHẨM (PHẦN BỊ THIẾU) =============== *@
<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
    @if (Model != null && Model.Any())
    {
        foreach (var product in Model)
        {
            // Gọi lại Partial View _ProductCard để hiển thị từng ô sản phẩm
            @Html.Partial("~/Views/Shared/_ProductCard.cshtml", product)
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-warning text-center" role="alert">
                <i class="fas fa-box-open fa-2x mb-2"></i><br />
                Không tìm thấy sản phẩm nào trong danh mục này.
            </div>
        </div>
    }
</div>