@model IEnumerable<ShopDunk.Models.Product>

@{
    ViewBag.Title = "Danh mục " + ViewBag.CategoryName;
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Lấy tên danh mục để sử dụng trong logic slider
    string category = ViewBag.CategoryName ?? "default";
}

@* =============== START SLIDER (ĐÃ CẬP NHẬT) =============== *@
<div id="categoryCarousel" class="carousel slide mb-5 shadow-sm" data-bs-ride="carousel" data-bs-interval="3000">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#categoryCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#categoryCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
    </div>
    <div class="carousel-inner" style="border-radius: 15px; overflow: hidden;">

        @* --- Logic hiển thị ảnh theo danh mục --- *@
        @if (category.Equals("iPhone", StringComparison.OrdinalIgnoreCase))
        {
            <div class="carousel-item active">
                <img src="https://placehold.co/1200x300/333333/AAAAAA?text=iPhone+Banner+1" class="d-block w-100" alt="iPhone Banner 1">
            </div>
            <div class="carousel-item">
                <img src="https://placehold.co/1200x300/E9E9E9/B2B2B2?text=iPhone+Banner+2" class="d-block w-100" alt="iPhone Banner 2">
            </div>
        }
        else if (category.Equals("iPad", StringComparison.OrdinalIgnoreCase))
        {
            <div class="carousel-item active">
                <img src="https://placehold.co/1200x300/DDEEFF/88AACF?text=iPad+Banner+1" class="d-block w-100" alt="iPad Banner 1">
            </div>
            <div class="carousel-item">
                <img src="https://placehold.co/1200x300/AABBCC/556677?text=iPad+Banner+2" class="d-block w-100" alt="iPad Banner 2">
            </div>
        }
        else if (category.Equals("Mac", StringComparison.OrdinalIgnoreCase))
        {
            <div class="carousel-item active">
                <img src="https://placehold.co/1200x300/555555/DDDDDD?text=Mac+Banner+1" class="d-block w-100" alt="Mac Banner 1">
            </div>
            <div class="carousel-item">
                <img src="https://placehold.co/1200x300/777777/EEEEEE?text=Mac+Banner+2" class="d-block w-100" alt="Mac Banner 2">
            </div>
        }
        else // Slider mặc định cho các danh mục khác (Watch, Âm thanh, v.v.)
        {
            <div class="carousel-item active">
                <img src="https://placehold.co/1200x300/E9E9E9/B2B2B2?text=Banner+@ViewBag.CategoryName+1" class="d-block w-100" alt="Banner 1">
            </div>
            <div class="carousel-item">
                <img src="https://placehold.co/1200x300/DDEEFF/88AACF?text=Banner+@ViewBag.CategoryName+2" class="d-block w-100" alt="Banner 2">
            </div>
        }

    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#categoryCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#categoryCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
@* =============== END SLIDER =============== *@


<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="category-title">@ViewBag.Title</h2>

            @* =============== START FILTER FORM =============== *@
            <form method="get" class="d-flex align-items-center">
                @* Giữ nguyên tham số 'id' (tên danh mục) khi lọc *@
                <input type="hidden" name="id" value="@ViewBag.CategoryName" />

                <label for="sortBy" class="form-label me-2 mb-0">Sắp xếp:</label>
                <select name="sortBy" id="sortBy" class="form-select form-select-sm" onchange="this.form.submit()">
                    <option value="default" @(ViewBag.SortBy == "default" ? "selected" : "")>Mới nhất</option>
                    <option value="price_asc" @(ViewBag.SortBy == "price_asc" ? "selected" : "")>Giá: Thấp đến Cao</option>
                    <option value="price_desc" @(ViewBag.SortBy == "price_desc" ? "selected" : "")>Giá: Cao đến Thấp</option>
                </select>
            </form>
            @* =============== END FILTER FORM =============== *@

        </div>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
    @if (!Model.Any())
    {
        <p class="text-muted">Không tìm thấy sản phẩm nào trong danh mục này.</p>
    }
    else
    {
        foreach (var p in Model)
        {
            @* Sử dụng lại Partial View _ProductCard để hiển thị sản phẩm *@
            @Html.Partial("~/Views/Shared/_ProductCard.cshtml", p)
        }
    }
</div>