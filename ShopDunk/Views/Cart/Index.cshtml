@model IEnumerable<ShopDunk.Models.CartItem>
@{
    ViewBag.Title = "Giỏ hàng";
}

<h2>Giỏ hàng của bạn</h2>

<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.Price * item.Quantity).ToString("C")</td>
                <td>
                    <a href="/Cart/Remove/@item.CartItemID" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Order/Checkout" class="btn btn-success">Tiến hành đặt hàng</a>