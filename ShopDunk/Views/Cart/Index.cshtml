@model IEnumerable<ShopDunk.Models.CartItem>

@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Giỏ hàng của bạn</h2>

<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Thành tiền</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">@item.Product.Name - @item.Color - @item.Storage</td>

                @* --- BẮT ĐẦU CẬP NHẬT SỐ LƯỢNG --- *@
                <td class="align-middle">
                    <div class="input-group" style="width: 130px;">
                        <a href="@Url.Action("DecreaseQuantity", "Cart", new { id = item.CartItemID })" class="btn btn-outline-secondary btn-sm">-</a>
                        <input type="text" class="form-control text-center" value="@item.Quantity" readonly />
                        <a href="@Url.Action("IncreaseQuantity", "Cart", new { id = item.CartItemID })" class="btn btn-outline-secondary btn-sm">+</a>
                    </div>
                </td>
                @* --- KẾT THÚC CẬP NHẬT SỐ LƯỢNG --- *@

                <td class="align-middle">@((item.Product.Price).ToString("N0")) ₫</td>

                <td class="align-middle">@((item.Product.Price * item.Quantity).ToString("N0")) ₫</td>

                <td class="align-middle">
                    <a href="/Cart/Remove/@item.CartItemID" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Checkout", "Order")" class="btn btn-success">Tiến hành đặt hàng</a>