@model IEnumerable<ShopDunk.Models.CartItem>

@{
    <h2>Giỏ hàng của bạn</h2>
}

<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Thành tiền</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>

                @* --- SỬA LỖI: Thêm 1 cặp ( ) bao quanh .ToString("N0") --- *@
                <td>@((item.Product.Price).ToString("N0")) ₫</td>

                @* Dòng này đã đúng, không cần sửa *@
                <td>@((item.Product.Price * item.Quantity).ToString("N0")) ₫</td>

                <td>
                    <a href="/Cart/Remove/@item.CartItemID" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Checkout", "Order")" class="btn btn-success">Tiến hành đặt hàng</a>