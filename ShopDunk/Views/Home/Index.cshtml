@model IEnumerable<ShopDunk.Models.Product>
@{
    ViewBag.Title = "Trang chủ";
}

<div class="text-center mb-5">
    <h1 class="display-5 fw-bold">Chào mừng đến với ShopDunk</h1>
    <p class="lead">Khám phá các sản phẩm Apple chính hãng</p>
</div>
@{
    ViewBag.Title = "Trang chủ";
}

<!-- Slider -->
<div id="homeCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Images/Banners/banner1.jpg" class="d-block w-100" alt="Banner 1">
        </div>
        <div class="carousel-item">
            <img src="~/Images/Banners/banner2.jpg" class="d-block w-100" alt="Banner 2">
        </div>
        <div class="carousel-item">
            <img src="~/Images/Banners/banner3.jpg" class="d-block w-100" alt="Banner 3">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- iPhone -->
<h2 class="mb-4 fw-bold text-dark">iPhone</h2>
<div class="row row-cols-2 row-cols-md-4 g-4 mb-5">
    @foreach (var product in ViewBag.iPhones as List<ShopDunk.Models.Product>)
    {
        @Html.Partial("_ProductCard", product)
    }
</div>

<!-- iPad -->
<h2 class="mb-4 fw-bold text-dark">iPad</h2>
<div class="row row-cols-2 row-cols-md-4 g-4 mb-5">
    @foreach (var product in ViewBag.iPads as List<ShopDunk.Models.Product>)
    {
        @Html.Partial("_ProductCard", product)
    }
</div>

<!-- Mac -->
<h2 class="mb-4 fw-bold text-dark">Mac</h2>
<div class="row row-cols-2 row-cols-md-4 g-4 mb-5">
    @foreach (var product in ViewBag.Macs as List<ShopDunk.Models.Product>)
    {
        @Html.Partial("_ProductCard", product)
    }
</div>
